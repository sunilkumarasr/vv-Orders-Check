<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_bottom_sheet"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose your preferred"
        android:textColor="@color/blue_back"
        android:textSize="20sp"
        android:fontFamily="@font/teachers_medium" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="delivery vehicle"
        android:textColor="@color/blue_back"
        android:textSize="20sp"
        android:fontFamily="@font/teachers_medium" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Select the vehicle you own and feel"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/teachers_regular" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="comfortable using for delivering orders."
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/teachers_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/round_lightgray">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cycle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/teachers_medium" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cycle_color_ic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/round_lightgray">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scooter"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/teachers_medium" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/scooter_color_ic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/round_lightgray">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bike"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/teachers_medium" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bike_color_ic"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/linearCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/round_edit_gray_light_edge"
            android:text="Cancle"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/teachers_regular"
            android:layout_marginEnd="5dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/linearUpload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:layout_marginStart="5dp"
            android:text="Update"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/teachers_regular"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>