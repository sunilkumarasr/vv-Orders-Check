<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitebg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="   Profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/teachers_regular" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitebg"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeMyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_lightgray">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgUser"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile_ic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toRightOf="@+id/imgUser"
                        android:text="My Account"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/teachers_regular" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/right_arrow"
                        app:tint="@color/colorPrimary"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLogout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_lightgray">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLogout"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/logout_ic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toRightOf="@+id/imgLogout"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/teachers_regular" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>